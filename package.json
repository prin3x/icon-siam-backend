{
  "name": "icon-siam-backend",
  "version": "1.0.2",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "NODE_OPTIONS=--no-deprecation next start",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts --coverage",
    "migrate-direct-table": "cross-env NODE_OPTIONS=--no-deprecation payload run ./src/commands/migrate-direct-table.ts",
    "migrate-events-table": "cross-env NODE_OPTIONS=--no-deprecation payload run ./src/commands/migrate-events-table.ts",
    "migrate-promotions-table": "cross-env NODE_OPTIONS=--no-deprecation payload run ./src/commands/migrate-promotions-table.ts",
    "sync-external-api": "cross-env NODE_OPTIONS=--no-deprecation payload run ./src/commands/sync-external-api.ts",
    "remove-old-promotions": "cross-env NODE_OPTIONS=--no-deprecation payload run ./src/commands/remove-old-promotions.ts",
    "import-stories": "cross-env NODE_OPTIONS=--no-deprecation payload run ./src/commands/import-stories.ts"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@payloadcms/db-postgres": "3.44.0",
    "@payloadcms/next": "3.44.0",
    "@payloadcms/payload-cloud": "3.44.0",
    "@payloadcms/richtext-lexical": "3.44.0",
    "@payloadcms/storage-s3": "3.44.0",
    "@payloadcms/ui": "3.44.0",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-switch": "^1.2.6",
    "@tiptap/extension-blockquote": "^3.4.4",
    "@tiptap/extension-code-block": "^3.4.4",
    "@tiptap/extension-color": "^3.4.4",
    "@tiptap/extension-highlight": "^3.4.4",
    "@tiptap/extension-horizontal-rule": "^3.4.4",
    "@tiptap/extension-image": "^3.4.4",
    "@tiptap/extension-link": "^3.4.4",
    "@tiptap/extension-placeholder": "^3.4.4",
    "@tiptap/extension-task-item": "^3.4.4",
    "@tiptap/extension-task-list": "^3.4.4",
    "@tiptap/extension-text-align": "^3.4.4",
    "@tiptap/extension-text-style": "^3.4.4",
    "@tiptap/extension-underline": "^3.4.4",
    "@tiptap/pm": "^3.4.4",
    "@tiptap/react": "^3.4.4",
    "@tiptap/starter-kit": "^3.4.4",
    "cross-env": "^7.0.3",
    "dotenv": "16.4.7",
    "graphql": "^16.11.0",
    "next": "15.4.7",
    "next-auth": "^4.24.11",
    "payload": "3.44.0",
    "prosemirror-state": "^1.4.3",
    "qs": "^6.14.0",
    "react": "19.1.0",
    "sharp": "0.32.6",
    "transliteration": "^2.3.5"
  },
  "devDependencies": {
    "@playwright/test": "1.50.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/react": "16.3.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.18.6",
    "@types/qs": "^6.14.0",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.2",
    "@vitejs/plugin-react": "4.5.2",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.1.13",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.4.7",
    "jsdom": "26.1.0",
    "playwright": "1.50.0",
    "playwright-core": "1.50.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ],
    "overrides": {
      "esbuild": ">=0.25.0",
      "linkifyjs": "4.3.2",
      "@eslint/plugin-kit": "0.3.4"
    }
  }
}
